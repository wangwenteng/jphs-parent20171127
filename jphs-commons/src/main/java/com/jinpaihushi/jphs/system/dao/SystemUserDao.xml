			</if>
			<if test="createTime!=null">
				SU.create_time=#{createTime},
			</if>
			<if test="creatorId!=null">
				SU.creator_id=#{creatorId},
			</if>
			<if test="creatorName!=null">
				SU.creator_name=#{creatorName},
			</if>
			<if test="status!=null">
				SU.status=#{status},
			</if>
			<if test="phone!=null">
				SU.phone=#{phone},
			</if>
		</set>
	</sql>

