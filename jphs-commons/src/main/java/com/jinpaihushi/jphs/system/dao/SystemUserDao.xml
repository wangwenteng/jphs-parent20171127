	<sql id="condition">
		<if test="id!=null and id!=''">
			AND SU.id=#{id}
		</if>
		<if test="name!=null and name!=''">
			AND SU.name=#{name}
		</if>
		<if test="email!=null and email!=''">
			AND SU.email=#{email}
		</if>
		<if test="password!=null and password!=''">
			AND SU.password=#{password}
		</if>
		<if test="createTime!=null">
			AND SU.create_time=#{createTime}
		</if>
		<if test="creatorId!=null and creatorId!=''">
			AND SU.creator_id=#{creatorId}
		</if>
		<if test="creatorName!=null and creatorName!=''">
			AND SU.creator_name=#{creatorName}
		</if>
		<if test="status!=null">
			AND SU.status=#{status}
		</if>
		<if test="phone!=null and phone!=''">
			AND SU.phone=#{phone}
		</if>
	</sql>

	<sql id="dynamicWhere">
		<where>
			<include refid="condition" />
		</where>
	</sql>

	<sql id="queryWhere">
		<where>
			<if test="id!=null and id!=''">
				AND SU.id LIKE CONCAT('%', #{id}, '%')
			</if>
			<if test="name!=null and name!=''">
				AND SU.name LIKE CONCAT('%', #{name}, '%')
			</if>
			<if test="email!=null and email!=''">
				AND SU.email LIKE CONCAT('%', #{email}, '%')
			</if>
			<if test="password!=null and password!=''">
				AND SU.password LIKE CONCAT('%', #{password}, '%')
			</if>
			<if test="createTime!=null">
				AND SU.create_time=#{createTime}
			</if>
			<if test="creatorId!=null and creatorId!=''">
				AND SU.creator_id LIKE CONCAT('%', #{creatorId}, '%')
			</if>
			<if test="creatorName!=null and creatorName!=''">
				AND SU.creator_name LIKE CONCAT('%', #{creatorName}, '%')
			</if>
			<if test="status!=null">
				AND SU.status=#{status}
			</if>
			<if test="phone!=null and phone!=''">
				AND SU.phone LIKE CONCAT('%', #{phone}, '%')
			</if>
		</where>
	</sql>

	<sql id="dynamicSet">
		<set>
			<if test="id!=null">
				SU.id=#{id},
			</if>
			<if test="name!=null">
				SU.name=#{name},
			</if>
			<if test="email!=null">
				SU.email=#{email},
			</if>
			<if test="password!=null">
