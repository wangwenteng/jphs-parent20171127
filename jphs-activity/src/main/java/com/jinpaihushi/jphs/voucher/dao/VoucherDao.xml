	<select id="getList" resultMap="voucher">
		SELECT
		`v`.`id`
		,`v`.`type`
		,`v`.`batch_no`
		,`v`.`product_id`
		,`v`.`goods_id`
		,`v`.`start_time`
		,`v`.`end_time`
		,`v`.`days`
		,`v`.`creator_id`
		,`v`.`creator_name`
		,`v`.`product_id` productId
		,`v`.`goods_id` goodsId
		,`v`.`create_time`
		,`v`.`status`
		,`vr`.`amount`
		,`vr`.`condition_amount`
		,`vr`.`discount_amount`
		,`p`.`title`
		productName
		FROM
		`jphs`.`voucher` AS
		`v`
		LEFT JOIN `jphs`.`product` AS
		`p`
		ON (`v`.`product_id` = `p`.`id`)
		LEFT JOIN
		`jphs`.`voucher_repertory` AS
		`vr`
		ON (`v`.`id` =
		`vr`.`voucher_id`)
		WHERE 1 = 1
		<if test="id!=null">
			AND `v`.`id` = #{id}
		</if>
		<if test="batchNo!=null">
			AND `v`.`batch_no` LIKE CONCAT(CONCAT('%', #{batchNo}),
			'%')
		</if>
		<if test="type!=null">
			AND `v`.`type` = #{type}
		</if>
		<if test="productId!=null">
			AND `v`.`product_id` LIKE CONCAT(CONCAT('%',
			#{productId}),
			'%')
		</if>
		<if test="goodsId!=null">
			AND `v`.`goods_id` LIKE CONCAT(CONCAT('%', #{goodsId}),
			'%')
		</if>
		<if test="amount!=null">
			AND `vr`.`amount` = #{amount}
		</if>
		<if test="status!=null">
			AND `v`.`status` = #{status}
		</if>
		<if test="beginTime!=null">
			AND `v`.`create_time` &gt;= #{beginTime}
		</if>
		<if test="stopTime!=null">
			AND `v`.`create_time` &lt;= #{stopTime}
		</if>
		GROUP BY `v`.`batch_no`
	</select>
	<select id="getUserAllVocher" resultType="java.util.HashMap">
		SELECT
		vu.amount,
		vu.end_time,
		v.type,
		v.product_id,
		v.goods_id,
		vr.condition_amount,
		vr.discount_amount,
		vu.use_time,
		CASE
		WHEN
		vu.use_time IS NOT NULL THEN
		'已使用'
		<![CDATA[
		WHEN vu.end_time < NOW() THEN
		]]>
		'已过期'
		ELSE
		'未使用'
		END AS `status`
		FROM
		voucher_use vu
		LEFT JOIN
		voucher_repertory vr ON vu.voucher_repertory_id = vr.id
		LEFT JOIN
		voucher v ON vr.voucher_id = v.id
		LEFT JOIN product p ON v.product_id =
		p.id
		WHERE vu.creator_id
		=#{userId}
		<if test="type!=null">
			<if test="type==1">
				AND v.type =1
			</if>
			<if test="type==2">
				AND v.type =2
			</if>
			<if test="type==3">
				AND v.type =3
			</if>
		</if>
		<if test="status!=null">
			<if test="status==1">
				AND vu.use_time IS NOT NULL
			</if>
			<if test="status==2">
				<![CDATA[
				AND vu.end_time < NOW()
				]]>
			</if>
			<if test="status==3">
				<![CDATA[
				AND vu.end_time > NOW() AND vu.use_time IS  NULL
				]]>
			</if>
		</if>
		ORDER BY vu.use_time, vu.create_time DESC
	</select>
