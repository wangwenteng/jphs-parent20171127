		UPDATE `INFORMATION_EVALUATE` IE
		SET
		IE.STATUS = -1
		WHERE IE.ID = #{id}
	</update>

	<update id="update">
		UPDATE `INFORMATION_EVALUATE` IE
		<include refid="dynamicSet" />
		WHERE IE.ID = #{id}
	</update>

