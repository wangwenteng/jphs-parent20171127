		WHERE IC.ID = #{id}
	</update>

	<update id="update">
		UPDATE `INFORMATION_COLLECTION` IC
		<include refid="dynamicSet" /> 
	    WHERE IC.ID = #{id}
	</update>

	<select id="load" resultMap="informationCollection">
		SELECT <include refid="field"/>
		FROM `INFORMATION_COLLECTION` IC
