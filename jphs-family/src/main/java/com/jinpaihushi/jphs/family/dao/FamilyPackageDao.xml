	    UPDATE `FAMILY_PACKAGE` FP
		SET 
		FP.STATUS = -1
		WHERE FP.ID = #{id}
	</update>

	<update id="update">
		UPDATE `FAMILY_PACKAGE` FP
		<include refid="dynamicSet" /> 
	    WHERE FP.ID = #{id}
	</update>

