			</if>
			<if test="creatorId!=null and creatorId!=''">
				AND FV.creator_id LIKE CONCAT('%', #{creatorId}, '%')
			</if>
			<if test="creatorName!=null and creatorName!=''">
				AND FV.creator_name LIKE CONCAT('%', #{creatorName}, '%')
			</if>
		</where>
	</sql>
	
	<sql id="dynamicSet">
		<set>
