	<sql id="condition">
		<if test="id!=null and id!=''">
			AND FV.id=#{id}
		</if>
		<if test="voucherId!=null and voucherId!=''">
			AND FV.voucher_id=#{voucherId}
		</if>
		<if test="status!=null">
			AND FV.status=#{status}
