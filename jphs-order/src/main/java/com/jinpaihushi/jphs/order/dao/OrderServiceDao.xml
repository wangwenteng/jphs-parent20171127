    `os`.`nurse_id`
    , `os`.`appointment_time`
    , `os`.`schedule`
    , `os`.`setout_time`
    , `os`.`start_service_time`
    , `os`.`end_service_time`
    , `os`.`remind_time`
    , `os`.`confirm_time`
    , `os`.`status`
    , `os`.`create_time`
    , `u`.`name` nurseName
    , `os`.`patient_name`
    , `os`.`patient_phone`
	FROM
    `jphs`.`order_service` AS `os`
    INNER JOIN `jphs`.`user` AS `u` 
        ON (`os`.`nurse_id` = `u`.`id`)
