		   </if>
           <if test="visitor!=null">
				CS.visitor=#{visitor}, 
		   </if>
           <if test="status!=null">
				CS.status=#{status}, 
		   </if>
           <if test="creatorId!=null">
				CS.creator_id=#{creatorId}, 
		   </if>
           <if test="creatorName!=null">
				CS.creator_name=#{creatorName}, 
		   </if>
           <if test="remark!=null">
				CS.remark=#{remark}, 
		   </if>
		</set>
	</sql>
	
	<sql id="orderby">
