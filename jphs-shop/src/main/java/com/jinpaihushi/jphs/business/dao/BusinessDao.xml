	<sql id="fieldWithAlias">
		B.id id, B.name name, 
		B.address address, B.contacts_name contactsName, 
		B.contacts_phone contactsPhone, B.settlement_cycle settlementCycle, 
		B.bank bank, B.openingBank openingbank, 
