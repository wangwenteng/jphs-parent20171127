		<include refid="field" />
		FROM `COMMODITY_ORDER` CO
		WHERE CO.ORDER_NO =#{orderNo};
	</select>


	<select id="getOrderList" resultMap="co">
		SELECT
		co.id commodityOrderId,
		co.`schedule`,
		co.create_time,
		coi.commodity_id,
		coi.title,
		coi.price,
		coi.commodity_model,
		coi.number,
		coi.status
		FROM commodity_order co
		LEFT JOIN commodity_order_info coi ON (co.id =
		coi.commodity_order_id)
		WHERE co.creator_id = #{userId}
		<if test="schedule!=null">
			AND co.`schedule` = #{schedule}
		</if>
	</select>


	<select id="getOrderDetail" resultMap="co">
		SELECT
		co.id commodityOrderId,
		co.phone,
		co.` receiveName` ,
		co.address,
		co.detail_address,
		co.`schedule`,
		co.pay_price,
		co.order_no,
		co.create_time,
		ci.url,
		coi.title,
		coi.price,
		coi.commodity_model,
		coi.commodity_id,
		coi.number
		FROM
		commodity_order co
		LEFT JOIN commodity_order_info coi ON (co.id = coi.commodity_order_id)
		LEFT JOIN commodity_images ci ON (ci.source_id = coi.commodity_id)
		WHERE co.id=#{orderId}
		AND ci.type = 1
	</select>
	
	<select id="getSaleProfit" resultType="java.lang.Double">
		SELECT
			 SUM(coi.profit)
		FROM commodity_order_info coi 
		WHERE coi.user_id = #{userId}
		AND coi.commodity_id = #{commodityId}
	</select>
	
	<select id="getSaleDetail" resultMap="co">
		SELECT
			coi.id,
			coi.title,
			coi.`status`,
			coi.create_time,
			coi.profit,
			ci.url
		FROM commodity_order_info coi 
		LEFT JOIN commodity_images ci ON (coi.commodity_id = ci.source_id)
		WHERE coi.user_id = #{userId}
		AND coi.commodity_id = #{commodityId}
		AND ci.type = 1
	</select>
	
	<update id="updateShopOrderSchedule">
		UPDATE 
			commodity_order co  
		SET co.`schedule` = #{schedule} 
		WHERE co.id = #{id}
	</update>
</mapper>
