	<select id="judgeProfit" resultType="java.util.HashMap">
		SELECT
		coi.id,
		coi.commodity_id comId,
		coi.`status`,
		coi.profit,
		coi.price,
		coi.title,
		ci.url
		FROM
		commodity_order_info coi
		LEFT JOIN commodity_images ci ON (
		coi.commodity_id = ci.source_id
		)
		WHERE
		coi.user_id = ${userId}
		AND ci.type = 1
		<if test="status==-1">
			AND coi.`status` = -1
		</if>
		<if test="status==0">
			AND coi.`status` in (0 ,1)
		</if>
		<if test="status==2">
			AND coi.`status` = 2
		</if>
	</select>
	
