			</if>
			<if test="type!=null">
				AND G.type=#{type}
			</if>
			<if test="gradeType!=null">
				AND G.grade_type=#{gradeType}
			</if>
			<if test="sort!=null">
				AND G.sort=#{sort}
			</if>
			<if test="remark!=null and remark!=''">
				AND G.remark LIKE CONCAT('%', #{remark}, '%')
			</if>
			<if test="status!=null">
				AND G.status=#{status}
			</if>
			<if test="createTime!=null">
