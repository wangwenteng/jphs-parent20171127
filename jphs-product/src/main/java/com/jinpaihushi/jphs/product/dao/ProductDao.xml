			</if>
			<if test="creatorId!=null and creatorId!=''">
				AND G.creator_id LIKE CONCAT('%', #{creatorId}, '%')
			</if>
			<if test="creatorName!=null and creatorName!=''">
				AND G.creator_name LIKE CONCAT('%', #{creatorName}, '%')
			</if>
