	<delete id="deleteById">
		DELETE P FROM `PRICE` P WHERE P.ID = #{id}
	</delete>

	<update id="disableById">
		UPDATE `PRICE` P
		SET
		P.STATUS = -1
		WHERE P.ID = #{id}
	</update>

	<update id="update">
		UPDATE `PRICE` P
		<include refid="dynamicSet" />
		WHERE P.ID = #{id}
	</update>

	<select id="load" resultMap="price">
		SELECT
		<include refid="field" />
		FROM `PRICE` P
		<include refid="dynamicWhere" />
	</select>

	<select id="count" resultType="java.lang.Integer">
		SELECT COUNT(*) FROM `PRICE` P
		<include refid="dynamicWhere" />
	</select>

	<select id="list" resultMap="price">
		SELECT
		<include refid="field" />
		FROM `PRICE` P
		<include refid="dynamicWhere" />
		<include refid="orderby" />
	</select>

	<select id="query" resultMap="price">
		SELECT
		<include refid="field" />
		FROM `PRICE` P
		<include refid="dynamicWhere" />
		<include refid="orderby" />
	</select>

	<select id="loadById" resultMap="price">
		SELECT
		<include refid="field" />
		FROM `PRICE` P
		WHERE P.ID = #{id}
	</select>

	<select id="getGoodsPriceGradeDetail" resultMap="getGoodsPriceDetail">
		SELECT
		p.id,
		p.goods_id,
		p.title,
		p.grade,
		p.grade_name,
		p.service_number,
		p.service_time,
		p.aptitude_id_arr,
		p.unit,
		p.sort,
		p.remark,
		p.create_time,
		p.status,
		p.creator_id,
		p.creator_name,
		pr.id pr_id,
		pr.site_id,
		pr.price,
		pr.cost_price,
		pr.old_price,
		pr.profit,
		pr.status pr_status
		FROM price p
		LEFT JOIN `price_part` pr ON pr.price_id = p.id
		WHERE pr.site_id=0 AND p.status=0 AND p.goods_id =#{id}
		group by p.grade order by p.grade
	</select>

	<!-- // getGoodsPriceDetail -->
	<select id="getGoodsPriceDetail" resultMap="getGoodsPriceDetail">
		SELECT
		p.id,
		p.goods_id,
		p.title,
		p.grade,
		p.grade_name,
		p.service_number,
		p.service_time,
		p.aptitude_id_arr,
		p.unit,
		p.sort,
		p.remark,
		p.create_time,
		p.status,
		p.creator_id,
		p.creator_name,
		pr.id pr_id,
		pr.site_id,
		pr.price,
		pr.cost_price,
		pr.old_price,
		pr.profit,
		pr.status pr_status
		FROM
		price p
		LEFT JOIN `price_part` pr ON pr.price_id = p.id
		WHERE 
		p.status=0 AND p.goods_id = #{goodsId} 
		<if test="grade!=null">
			AND p.grade=#{grade}
		</if>
		<choose>
			<when test="siteId!=null and siteId!=''">
				AND pr.site_id=#{siteId}
			</when>
			<otherwise>
				AND pr.site_id=0
			</otherwise>
		</choose>
		;
	</select>
	<select id="getGoodsGrade" resultMap="price">
		SELECT DISTINCT grade,grade_name FROM
		price p WHERE p.goods_id=#{goodsId} GROUP BY grade;
	</select>
