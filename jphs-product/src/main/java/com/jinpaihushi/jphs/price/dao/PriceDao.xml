	<sql id="queryWhere">
		<where>
			<if test="id!=null and id!=''">
				AND P.id LIKE CONCAT('%', #{id}, '%')
			</if>
			<if test="goodsId!=null and goodsId!=''">
				AND P.goods_id LIKE CONCAT('%', #{goodsId}, '%')
			</if>
			<if test="title!=null and title!=''">
