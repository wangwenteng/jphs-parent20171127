		</foreach>
	</insert>
	
	<delete id="deleteById">
		DELETE PG FROM `PRICE_GRADE` PG WHERE PG.ID = #{id} 
	</delete>
	
	<update id="disableById">
	    UPDATE `PRICE_GRADE` PG
		SET 
		PG.STATUS = -1
		WHERE PG.ID = #{id}
	</update>

	<update id="update">
		UPDATE `PRICE_GRADE` PG
		<include refid="dynamicSet" /> 
	    WHERE PG.ID = #{id}
	</update>

	<select id="load" resultMap="priceGrade">
		SELECT <include refid="field"/>
		FROM `PRICE_GRADE` PG
