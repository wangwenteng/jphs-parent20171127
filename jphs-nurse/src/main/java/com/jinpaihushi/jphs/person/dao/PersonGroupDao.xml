			</if>
			<if test="creatorId!=null and creatorId!=''">
				AND PG.creator_id LIKE CONCAT('%', #{creatorId}, '%')
			</if>
			<if test="creatorName!=null and creatorName!=''">
				AND PG.creator_name LIKE CONCAT('%', #{creatorName}, '%')
			</if>
		</where>
	</sql>

	<sql id="dynamicSet">
		<set>
			<if test="id!=null">
				PG.id=#{id},
			</if>
			<if test="name!=null">
