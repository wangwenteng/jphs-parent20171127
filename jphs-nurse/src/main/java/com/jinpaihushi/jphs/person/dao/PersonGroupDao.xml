		<if test="creatorId!=null and creatorId!=''">
			AND PG.creator_id=#{creatorId}
		</if>
		<if test="creatorName!=null and creatorName!=''">
			AND PG.creator_name=#{creatorName}
		</if>
	</sql>

	<sql id="dynamicWhere">
		<where>
			<include refid="condition" />
		</where>
	</sql>

	<sql id="queryWhere">
		<where>
			<if test="id!=null and id!=''">
