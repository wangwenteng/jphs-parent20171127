<mapper namespace="com.jinpaihushi.jphs.jobtitle.dao.JobtitleDao">
	
	<sql id="field">
		J.id, J.name, J.jobtitle_type_id, J.creator_id, 
		J.creator_name, J.create_time, J.status
	</sql>

	<sql id="fieldGlobal">
		J.id J_id, J.name J_name, 
		J.jobtitle_type_id J_jobtitle_type_id, J.creator_id J_creator_id, 
		J.creator_name J_creator_name, J.create_time J_create_time, 
		J.status J_status
