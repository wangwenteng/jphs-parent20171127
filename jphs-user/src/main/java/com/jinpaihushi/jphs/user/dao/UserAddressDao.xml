<mapper namespace="com.jinpaihushi.jphs.user.dao.UserAddressDao">
	
	<sql id="field">
		UA.id, UA.title, UA.province, UA.city, 
		UA.area, UA.detailAddress, UA.create_time, UA.creator_id, 
		UA.creator_name, UA.status
	</sql>

	<sql id="fieldGlobal">
		UA.id UA_id, UA.title UA_title, 
		UA.province UA_province, UA.city UA_city, 
		UA.area UA_area, UA.detailAddress UA_detailAddress, 
		UA.create_time UA_create_time, UA.creator_id UA_creator_id, 
		UA.creator_name UA_creator_name, UA.status UA_status
	</sql>
	
	<sql id="fieldWithAlias">
		UA.id id, UA.title title, 
		UA.province province, UA.city city, 
		UA.area area, UA.detailAddress detailaddress, 
		UA.create_time createTime, UA.creator_id creatorId, 
		UA.creator_name creatorName, UA.status status
	</sql>
	
	<sql id="condition">
		<if test="id!=null and id!=''">
			AND UA.id=#{id}
		</if>
		<if test="title!=null and title!=''">
			AND UA.title=#{title}
		</if>
		<if test="province!=null and province!=''">
			AND UA.province=#{province}
		</if>
		<if test="city!=null and city!=''">
			AND UA.city=#{city}
		</if>
		<if test="area!=null and area!=''">
			AND UA.area=#{area}
		</if>
		<if test="detailaddress!=null and detailaddress!=''">
			AND UA.detailAddress=#{detailaddress}
		</if>
		<if test="createTime!=null">
			AND UA.create_time=#{createTime}
		</if>
		<if test="creatorId!=null and creatorId!=''">
			AND UA.creator_id=#{creatorId}
		</if>
		<if test="creatorName!=null and creatorName!=''">
			AND UA.creator_name=#{creatorName}
		</if>
		<if test="status!=null">
			AND UA.status=#{status}
		</if>
	</sql>
	
	<sql id="dynamicWhere">
		<where>
			<include refid="condition"/>
		</where>
	</sql>
	
	<sql id="queryWhere">
		<where>
			<if test="id!=null and id!=''">
				AND UA.id LIKE CONCAT('%', #{id}, '%')
			</if>
			<if test="title!=null and title!=''">
				AND UA.title LIKE CONCAT('%', #{title}, '%')
			</if>
			<if test="province!=null and province!=''">
				AND UA.province LIKE CONCAT('%', #{province}, '%')
			</if>
			<if test="city!=null and city!=''">
				AND UA.city LIKE CONCAT('%', #{city}, '%')
			</if>
			<if test="area!=null and area!=''">
				AND UA.area LIKE CONCAT('%', #{area}, '%')
			</if>
			<if test="detailaddress!=null and detailaddress!=''">
				AND UA.detailAddress LIKE CONCAT('%', #{detailaddress}, '%')
			</if>
			<if test="createTime!=null">
				AND UA.create_time=#{createTime}
			</if>
			<if test="creatorId!=null and creatorId!=''">
				AND UA.creator_id LIKE CONCAT('%', #{creatorId}, '%')
			</if>
			<if test="creatorName!=null and creatorName!=''">
				AND UA.creator_name LIKE CONCAT('%', #{creatorName}, '%')
			</if>
			<if test="status!=null">
				AND UA.status=#{status}
			</if>
		</where>
	</sql>
	
	<sql id="dynamicSet">
		<set>
           <if test="id!=null">
				UA.id=#{id}, 
		   </if>
           <if test="title!=null">
				UA.title=#{title}, 
		   </if>
           <if test="province!=null">
				UA.province=#{province}, 
		   </if>
           <if test="city!=null">
				UA.city=#{city}, 
		   </if>
           <if test="area!=null">
				UA.area=#{area}, 
		   </if>
           <if test="detailaddress!=null">
				UA.detailAddress=#{detailaddress}, 
		   </if>
           <if test="createTime!=null">
				UA.create_time=#{createTime}, 
		   </if>
           <if test="creatorId!=null">
				UA.creator_id=#{creatorId}, 
		   </if>
           <if test="creatorName!=null">
				UA.creator_name=#{creatorName}, 
		   </if>
           <if test="status!=null">
				UA.status=#{status}, 
		   </if>
		</set>
	</sql>
	
	<sql id="orderby">
		<if test="orderby != null">
			ORDER BY ${orderby}
		</if>
	</sql>

	<resultMap id="userAddress" type="com.jinpaihushi.jphs.user.model.UserAddress">
